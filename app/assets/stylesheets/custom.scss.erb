/* http://meyerweb.com/eric/tools/css/reset/
   v2.0 | 20110126
   License: none (public domain)
*/

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
	display: block;
}
body {
	line-height: 1;
  height: 100%;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}


* {
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}

html {
  font-family: helvetica, arial, sans-serif;
  font-size: 14px;
  height: 100%;
}

/* mixins, variables, etc. */

$gray-light: #eaeaea;

/* universal */

main {
  margin-top: 50px;
  height: 100%;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
  h1 {
    margin-bottom: 10px;
  }
}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  letter-spacing: -2px;
  margin-bottom: 30px;
  text-align: center;
}

h2 {
  font-size: 1.2em;
  letter-spacing: -1px;
  margin-bottom: 30px;
  text-align: center;
  font-weight: normal;
  color: #112438;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* header */

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: white;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-top: 12px;
  padding-left: 15px;
  font-weight: bold;
  &:hover {
    color: white;
    text-decoration: none;
  }
}

.navbar .container {
  position: fixed;
  top: 0;
  width: 100%;
  height: 50px;
  background-color: #112438;
}

.user_nav {
  display: flex;
  float: right;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  width: 400px;
  padding-right: 15px;
}

.user_nav li {
  flex: 1;
  display: flex;
  justify-content: space-around;
}

.user_nav li a {
  color: white;
}

#fb_nav {
  flex: 2
}

/* Welcome page */

#sb_jumbo {
  height: 30%;
  min-height: 300px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: url(<%= asset_path 'blue-universe.jpeg' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

#sb_jumbo h1 {
  color: #c1deff;
}

.welcome {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.welcome h3 {
  font-size: 1.3em;
  margin: 15px auto;
}

.welcome a {
  height: 50px;
  width: 130px;
  background-color: #112438;
  border: 2px solid #c1deff;
  border-radius: 8px;
  color: #c1deff;
  display:flex;
  justify-content: center;
  align-items: center;
}

.form_container {
	margin: 0 auto;
	padding: 20px 0;
	width: 300px;
	// height: 450px;
	display: flex;
	flex-direction: column;
	background-color: #112438;
  border: 2px solid #c1deff;
  border-radius: 8px;
	justify-content: space-between;
}

.form_container * {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	color: white;
}

form {
	height: 85%;
	justify-content: space-around;
	margin-bottom: 15px;
}

.field {
	font-size: 1.1em;
	width: 100%;
	margin-bottom: 20px;
}

.field input {
	height: 35px;
	border: 2px solid #c1deff;
  border-radius: 8px;
	color: #112438;
	width: 80%;
}

.actions input {
	width: 180px;
	height: 30px;
	border: 2px solid #c1deff;
  border-radius: 8px;
	color: #112438;
	background-color: white;
	justify-content: center;
}

.field label {
	margin-bottom: 5px;
}

.actions {
	font-size: 1.2em;
	width: 100%;
	margin-top: 15px;
}

h2 {
	padding-top: 25px;
}

.field.remember {
	flex-direction: row;
	margin: 0 auto;
	align-items: center;
	justify-content: center;
}

.remember * {
	display: inline;
}

#user_remember_me {
	height: 15px;
	width: auto;
}

.login .actions {
	margin: 0;
}
