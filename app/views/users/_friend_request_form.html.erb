<% unless current_user == @user %>
  <div class="friend_request">
    <% if current_user.already_sent_friend_request_to?(@user) %>
      <%= form_for(current_user.sent_friend_requests.find_by(recipient_id: @user.id),
                   html: { method: :delete }) do |f| %>
      <%= f.submit "Take back friend request", class: "button" %>
      <% end %>
    <% else %>
      <%= form_for(current_user.sent_friend_requests.build) do |f| %>
        <div><%= hidden_field_tag :recipient_id, @user.id %></div>
      <%= f.submit "Send Friend Request", class: "button" %>
      <% end %>
    <% end %>
  </div>
<% end %>
